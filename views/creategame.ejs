<!DOCTYPE html>
<html>
<head>
    <% include ../views/partials/head.ejs %>
    <link rel="stylesheet" type="text/css" href="stylesheets/register.css">
</head>

<header>
    <% include ../views/partials/headerloggedin.ejs %>
</header>
<body>
<div id="login" class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-12">

                            <a href="#" class="active" id="login-form-link">Create Game</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form action="/creategame" method="post" role="form"
                                  style="display: block;" id='create-game'>
                                <div class="form-group">
                                    <input type="text" name="roomname" tabindex="1" class="form-control"
                                           placeholder="Room Name" value="">
                                </div>
                                <div class="form-group">
                                    <select class="form-control">
                                        <option value="Number of Players">Number of Players</option>
                                        <option value="two">Two</option>
                                        <option value="three">Three</option>
                                        <option value="four">Four</option>
                                        <option value="five">Five</option>
                                        <option value="six">Six</option>
                                        <option value="seven">Seven</option>
                                        <option value="eight">Eight</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="create-submit" id="create-submit"
                                                   class="form-control btn btn-login" value="Create Game">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-12">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
<script src="/javascripts/creategame.js"></script>
</body>
</html>