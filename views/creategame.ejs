<!DOCTYPE html>
<html>
<head>
    <% include ../views/partials/head.ejs %>
    <link rel="stylesheet" type="text/css" href="stylesheets/register.css">
</head>

<header>
    <% include ../views/partials/headerloggedin.ejs %>
</header>
<body>
<div id="login" class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-12">
                            <a href="#" class="active" id="login-form-link">Create Game</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form action="/creategame" method="post" role="form"
                                  style="display: block;" id='create-game'>
                                <div class="form-group">
                                    <input type="text" name="roomname" id="roomname" tabindex="1" class="form-control"
                                           placeholder="Room Name" value="">
                                </div>
                                <div class="form-group">
                                    <select class="form-control" id="numberofplayers">
                                        <option value=2>Two</option>
                                        <option value=3>Three</option>
                                        <option value=4>Four</option>
                                        <option value=5>Five</option>
                                        <option value=6>Six</option>
                                        <option value=7>Seven</option>
                                        <option value=8>Eight</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="create-submit" id="create-submit"
                                                   class="form-control btn btn-login" value="Create Game">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-12">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../views/partials/footer.ejs %>
<script src="/javascripts/create_game.js"></script>
</body>
</html>