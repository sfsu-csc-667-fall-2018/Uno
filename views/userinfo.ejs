<!DOCTYPE html>
<html>
<head>
    <% include ../views/partials/head.ejs %>
    <link rel="stylesheet" type="text/css" href="stylesheets/register.css">
</head>

<header>
    <% include ../views/partials/headerloggedin.ejs %>

</header>
<body>

<div id="login" class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-12">

                            <a href="#" class="active" id="login-form-link">User Info</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form id="update-submit" action="/updatesuccess" method="post" role="form"
                                  style="display: block;">
                                <div class="form-group">
                                    <h5>Current Username: Username</h5>
                                    <input type="text" name="username" id="username" tabindex="1" class="form-control"
                                           placeholder="New Username" value="">
                                </div>
                                <div class="form-group">
                                    <h5>Current Email: Email</h5>
                                    <input type="text" name="email" id="email" tabindex="2" class="form-control"
                                           placeholder="New Email" value="">
                                </div>
                                <div class="form-group">
                                    <h5>Create New Password</h5>
                                    <input type="password" name="password" id="password" tabindex="3"
                                           class="form-control" placeholder="New Password">
                                </div>
                                <div class="form-group">

                                    <input type="password" name="confirm-password" id="confirm-password" tabindex="3"
                                           class="form-control" placeholder="Confirm Password">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="update-submit" id="update-submit" tabindex="4"
                                                   class="form-control btn btn-login" value="Update Information">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-12">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
